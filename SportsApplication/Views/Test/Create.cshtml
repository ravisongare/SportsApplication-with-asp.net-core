@model SportsApplication.Models.Test

@{
    ViewData["Title"] = "Create";
}

<h2>Create New Test</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="User_id" type="hidden"/>
          
            <div class="form-group">
                <label asp-for="type" class="control-label"></label >
                <select required asp-for="type" class="form-control">
                    <option value="" selected disabled>--Select Type--</option>
                <option>CooperTest</option>
                    <option>SprintTest</option>
                </select>
                <span asp-validation-for="type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="date" class="control-label"></label>
                <input asp-for="date" class="form-control" placeholder="010219"/>
                <span asp-validation-for="date" class="text-danger"></span>
            </div>
         
                <input asp-for="count" type="hidden"/>
               
            <div class="form-group">
                <input type="submit" value="CreateTest" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
